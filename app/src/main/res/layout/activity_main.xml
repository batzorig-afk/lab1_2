<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:orientation="vertical">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Эхлэх товчлуурыг дарна уу?"
            android:textSize="24sp"/>
        <CheckBox
            android:id="@+id/chkAgree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Эхлэх" />
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Хайртай амьтнаа сонгох..."
            android:textSize="24sp"/>
        <RadioGroup
            android:id="@+id/rGroup" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginTop="16dp">
            <RadioButton
                android:id="@+id/rBtn1" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Нохой" />
            <RadioButton
                android:id="@+id/rBtn2" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Муур" />
            <RadioButton
                android:id="@+id/rBtn3" android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:text="Туулай" />
        </RadioGroup>
        <Button
            android:id="@+id/btnOk" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Selected" />
        <ImageView
            android:id="@+id/imgPet" android:src="@mipmap/ic_launcher"
            android:layout_width="150dp" android:layout_height="150dp" android:layout_marginTop="5dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>